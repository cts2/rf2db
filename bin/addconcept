""" Add a new concept.
"""
import sys
import argparse
import os

_curdir = os.path.join(os.getcwd(), os.path.dirname(__file__), '..')

# Get ourselves into the correct directory
sys.path.append(_curdir)
sys.path.append(os.path.join(_curdir, '..', 'ConfigManager'))





def main(args):
    parser = argparse.ArgumentParser(description="Add a new concept to an RF2 database")
    parser.add_argument('configfile', help="Configuration file location")
    parser.add_argument('-n', '--name', help="Concept name",  required=True)
    parser.add_argument('-p', '--parent', help="Parent concept id", required=True)
    parser.add_argument('-d', '--description', help="Concept description", required=True)
    opts = parser.parse_args(args)


if __name__ == '__main__':
    main(sys.argv[1:])

